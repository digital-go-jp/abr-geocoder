{
  "extends": "./tsconfig.json",
  "typeRoots": [
    "node_modules/@types",
    "node_modules/@jest"
  ],
  "compilerOptions": {
    "types": [ "node", "jest" ],
    "moduleResolution": "node",
    "lib": ["ES2023"]
  },
  "include": [
    "src/**/*.ts",
    "__mocks__/**/*.ts",
    ".system/**/*.ts"
  ],
  "exclude": [
    "src/**/__skips__/*",
    "node_modules"
  ]
}